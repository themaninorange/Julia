void processSpecialKeys(int key, int x, int y) {

	switch(key) {
		case GLUT_KEY_RIGHT :
			A = A + moveiter/1024;	break;
		case GLUT_KEY_LEFT :
			A = A + moveiter/1024;	break;
		case GLUT_KEY_UP :
			B = B + moveiter/1024;	break;
		case GLUT_KEY_DOWN :
			B = B + moveiter/1024;	break;
	}
}// */

void processNormalKeys(unsigned char key, int x, int y) {

	if(key == 43){		//Plus sign key, '+'
		moveiter = moveiter * 1.1;
	}else if(key == 45){	//Minus sign key, '-'
		moveiter = moveiter/1.1;
	}
}// */

void mouseClicks(int button, int state, int x, int y) {

	switch(button) {
		case GLUT_LEFT_BUTTON :
			A = (float)x/window_width*4.0-2.5;
			B = (float)y/window_height*4.0-2.5;	break;
		case GLUT_RIGHT_BUTTON :
			break;
	}
	glutPostRedisplay();
}// */

void displayJulia(void) 
{ 
	cudaColorJulia<<<1024, 1024>>>(pixelsJulia_GPU, A, B);
	cudaMemcpy(pixelsJulia_CPU, pixelsJulia_GPU,
		window_width*window_height*3*sizeof(float),
		cudaMemcpyDeviceToHost);
	glDrawPixels(window_width, window_height, GL_RGB, GL_FLOAT, pixelsJulia_CPU); 
	glFlush(); 
	
}

void displayMandelbrot(void) 
{ 
	cudaColorMandelbrot<<<1024, 1024>>>(pixelsMandel_GPU, A, B);
	cudaMemcpy(pixelsMandel_CPU, pixelsMandel_GPU,
		window_width*window_height*3*sizeof(float),
		cudaMemcpyDeviceToHost);
	glDrawPixels(window_width, window_height, GL_RGB, GL_FLOAT, pixelsMandel_CPU); 
	glFlush(); 
}

__global__ void Addition(float *A, float *B, float *C, int n){
	int tid = threadIdx.x;
	int bid = blockIdx.x;
	if(tid < n){
		C[bid*1024 + tid] = A[bid*1024 + tid] + B[bid*1024 +tid]; 
	}
}

void CleanUp(float *A_CPU, float *B_CPU, float *C_CPU, 
	     float *A_GPU, float *B_GPU, float *C_GPU){
	free(A_CPU);
	free(B_CPU);
	free(C_CPU);

	cudaFree(A_GPU);
	cudaFree(B_GPU);
	cudaFree(C_GPU);
} // */	


